    <script>
        const audio = document.getElementById('radioStream');
        const playBtn = document.getElementById('playBtn');
        const statusText = document.getElementById('status');
        const icon = playBtn.querySelector('i');

        playBtn.addEventListener('click', function() {
            if (audio.paused) {
                audio.play();
                icon.className = 'fas fa-pause';
                playBtn.innerHTML = '<i class="fas fa-pause"></i> ПАУЗА';
                statusText.innerHTML = 'Сейчас в эфире: <b>Isfara FM</b>';
                statusText.style.color = '#2ecc71';
            } else {
                audio.pause();
                icon.className = 'fas fa-play';
                playBtn.innerHTML = '<i class="fas fa-play"></i> СЛУШАТЬ ОНЛАЙН';
                statusText.innerHTML = 'Трансляция остановлена';
                statusText.style.color = '#e74c3c';
            }
        });

        // Замена placeholder лого на реальное (если есть URL)
        // document.getElementById('logo').src = 'https://isfarafm.com/logo.png';
    </script>
